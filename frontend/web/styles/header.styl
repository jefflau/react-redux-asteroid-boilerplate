header
  font-family 'Varela Round'
  background skyblue
  color white
  padding 0 20px
  width 100%
  height 50px
  position relative
  line-height 50px
  margin 0

  h2
    color white
    font-size 28px
    text-transform lowercase
    padding-right 10px
    letter-spacing -2px
    position relative
    float left

  nav
    position relative
    margin 0 auto
    width auto
    float left
    height 100%

    a
      color white
      text-decoration none
      position relative
      display inline-block
      margin 2px 15px 0
      text-align center
