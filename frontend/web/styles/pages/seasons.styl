.anime-container
  container()
  padding 20px 20px 0
  display flex
  flex-wrap wrap

.anime-item
  background white
  border-radius 3px
  position relative
  width calc(25% - 15px)
  height 0
  overflow hidden
  padding-bottom 30%
  margin-right 20px
  margin-bottom 20px

  &:nth-child(4n)
    margin-right 0

  +below($width-m)
    width calc(33.333% - 13.3333px)
    padding-bottom 38%

    &:nth-child(4n)
      margin-right 20px

    &:nth-child(3n)
      margin-right 0

  +below($width-s)
    width calc(50% - 10px)
    padding-bottom 60%

    &:nth-child(3n)
      margin-right 20px

    &:nth-child(2n)
      margin-right 0

  a
    display block

  .overlay
    position absolute
    bottom 0
    left 0
    height 100%
    width 100%

  img
    display block
    width 100%

  h3
    font-family Varela Round
    position absolute
    top 10%
    left 0
    padding-left 20px
    color white

    &:before
      background rgba(135,206,250,1)
      height 100%
      content ""
      padding 0 10px
      padding-bottom 0
      padding-left 0
      position absolute
      top 0
      left 0

    &:after
      background rgba(0,0,0,0.7)
      content ""
      height 100%
      padding 0 10px
      padding-bottom 0
      padding-left 0
      position absolute
      top 0
      left 10px

    span
      white-space pre-wrap
      background rgba(0,0,0,0.7)
      padding 8px
      padding-left 0
      line-height 2.3em

  .score
    color white
    font-family Varela Round
    border-top skyblue 3px solid
    border-left skyblue 3px solid
    background black
    position absolute
    right 0
    bottom 0
    padding 10px
    font-size 20px
